		<!--活动说明 end-->
		<!--倒计时 start-->
		<div class="lotty-n">
			<div class="countdown">
				<div class="left-text">
					<img src="../../assets/images/active/datetime.png" />
				</div>
				<div class="datetime">
					<span>{{ rTime.h | TimeText }}</span>
					<b>:</b>
					<span>{{ rTime.m | TimeText }}</span>
					<b>:</b>
					<span>{{ rTime.s | TimeText }}</span>
				</div>
