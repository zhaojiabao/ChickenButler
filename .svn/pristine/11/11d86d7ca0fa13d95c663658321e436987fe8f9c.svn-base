<script>
	var u = navigator.userAgent,
		app = navigator.appVersion;
	var isAndroid = u.indexOf('Android') > -1 || u.indexOf('Linux') > -1; //android终端或者uc浏览器
	var isiOS = !!u.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/); //ios终端

	var lottyArr = [1, 2, 3, 6, 9, 8, 7, 4]; //抽奖顺序
	var timer;
	import { Popup, Icon, XDialog, TransferDomDirective as TransferDom } from 'vux';
	import { getGoods, getUserPrize, addScores, addPrize, getPrize, getRecordLog } from '../../api/BeneActive'
	export default {
		directives: {
			TransferDom
		},
		components: {
			Popup,
			Icon,
			XDialog
		},
		data() {
			return {
				selectIndex: 0,
				isStop: false,
				is_lotty_show: false,
				lottyArr: lottyArr,
				lotty: 1,
				alert_text:'',
				rTime: {
					h: 0,
					m: 0,
					s: 0
				},
				goodsList:'', //奖品
				prizes: [],
				prizeresult: 1,
				is_app: false,
				round_index: 3, //第三轮中奖
				ticket: false
			}
		},
		mounted() {
			this.GetRTime();
			var ua = navigator.userAgent.toLowerCase();
			if(ua.match(/djgj_jn/)) {
				this.ticket = this.$route.query.ticket;
			}
			if(!this.ticket) this.ticket = localStorage.getItem('ticket');
			if(!this.ticket) {
				this.$store.state.source_url_name = this.$route.path;
				this.$router.push('p/login');
			}
			getGoods().then(rs => {
				this.goodsList = rs.data;
			})
			
		},
		methods: {
			itemClick(i) {
				if(this.selectIndex == 0) {					
					addPrize({
						ticket: this.ticket
					}).then(rs => {
						var prizeresult = 0;
						if(rs.data != undefined) prizeresult = rs.data.prize_id == 20 ? 9 : 1;
						if(rs.retcode == 2000) {
							this.prizeDraw();
							this.prizeresult = prizeresult;
						} else if(rs.retcode == 4001) {
							this.selectIndex = prizeresult;
							this.prizeresult = prizeresult;
							this.is_lotty_show = true; //显示中奖弹窗
							this.alert_text = "您已经过中奖啦！";
						} else {
							this.$vux.alert.show({
								title: '非常抱歉！',
								content: rs.msg
							})
						}
					});
				} else {
					this.is_lotty_show = true; //显示中奖弹窗
					this.alert_text = "您已经过中奖啦！";
				}
			},
			//点击抽奖动画
			prizeDraw() {
				this.lotty = 0;
				var round = 0;
				timer = setInterval(() => {
					if(this.isStop) { //停止抽奖
						clearInterval(timer);
						this.isStop = false;
					} else {
						//中奖纪录
						this.selectIndex = lottyArr[this.lotty];
						this.lotty++;
						if(this.lotty > 7) {
							this.lotty = 0; //最大值范围
							round++;
						}
						if(round == this.round_index && this.selectIndex == this.prizeresult) {
							this.isStop = true;
							this.selectIndex = this.prizeresult;
							this.is_lotty_show = true; //显示中奖弹窗
							this.alert_text = "恭喜您，中奖啦！";
						}
					}
				}, 50);
			},
			GetRTime() {
				var endTime = new Date('2017/09/01 00:00:00');
				var nowTime, t;
				var ita = setInterval(() => {
					nowTime = new Date();
					t = endTime.getTime() - nowTime.getTime();
					if(t >= 0) {
						this.rTime.h = Math.floor(t / 1000 / 60 / 60);
						this.rTime.m = Math.floor(t / 1000 / 60 % 60);
						this.rTime.s = Math.floor(t / 1000 % 60);
					} else {
						clearInterval(ita);
					}
				}, 1000);
			},
			pushPage() {
				window.location.href = 'https://api.danjiguanjia.com/v4/news/viewDetail/id/4065.html';
			}
		},
		filters: {
			TimeText: function(t) {
				return t >= 10 ? t : '0' + t;
			}
		}
	}
</script>

