</template>

<script>
	Vue.filter("tell", function(value,users) {
		var pattern = /^1[34578]\d{9}$/;
		if(pattern.test(value)) {
			if(value == users){
				return value;
			}else{
				return value.substr(0, 3) + "****" + value.substr(7)
			}
		} else {
			return value;
		}
	})

	import { ButtonTab, ButtonTabItem, Divider, Scroller, XHeader, XButton, Popup, PopupPicker, Actionsheet } from 'vux'
	import { forumsList, userLogin, circleList, favoritePost, delFavoritePost, unlikeCommunity, likeCommunity, addReport, cancleReport, circleJoin, delCommunity,userInfo } from "../../api/api"
	import MugenScroll from 'vue-mugen-scroll'
	import Vue from 'vue'
	export default {
		components: {
			ButtonTab,
			ButtonTabItem,
			Divider,
			Scroller,
			XHeader,
			XButton,
			Popup,
			PopupPicker,
			MugenScroll,
			Actionsheet
		},
		data() {
			return {
				forum_list: [],
				page: 1,
				types: [4, 1, 2],
				type: 0,
				scroller: true,
				circle: false,
				circle_list: [],
				titles: ['看帖子', '精华贴', '提问帖', '圈子'],
				post: false,
				current_post: {},
				showPopupPicker: false,
				loading: false,
				show: false,
				jubaoDatas: ['传播谣言', '诈骗钱财', '存在侵权行为', '不适当的内容'],
				users:{}
			}
		},
		//初次加载页面填充数据默认为看帖子,type为4
		mounted() {
			this.type = this.types.indexOf(parseInt(this.$route.params.index));
			this.$store.state.header.title = this.titles[this.type];
			this.$store.state.header.right_url = "/p/myforum";
			if(this.$store.state.ticket == "") {
				this.$router.push('/p/login')
			} else {
				forumsList({
					page: 1,
					type: this.types[this.type],
					ticket: this.$store.state.ticket
				}).then(res => {
					if(this.$store.state.ticket == null) {
						this.$router.push('/p/login')
					} else {
						this.forum_list = res.data;
					}
				});
			}
			userInfo({
				ticket: this.$store.state.ticket
			}).then(rs =>{
				this.users=rs.data.mobile;
			})
			
			
			//圈子的数据
			circleList({
				ticket: this.$store.state.ticket
			}).then(res => {
				this.circle_list = res.data;
			});
			this.$store.state.header.right_title = "我的论坛";
		},
		methods: {
			onHidePopup() {
				this.showPopupPicker = false;
			},
			//当第一页到底时,下拉刷新进入下一页
			fetchData() {
				this.page++;
				forumsList({
					type: this.types[this.type],
					page: this.page,
					ticket: this.$store.state.ticket
				}).then(res => {
					for(var i = 0; i < res.data.length; i++) {
						this.forum_list.push(res.data[i]);
					}
				});
			},
			//点击不同的按钮 切换不同的页面,其中圈子不同于其他的帖子页面,使用v-show控制显示隐藏
			onItemClick(index) {
				this.page = 1;
				this.forum_list = [];
				this.$store.state.header.title = this.titles[index];
				if(index < 3) {
					this.$store.state.header.right_title = "我的论坛";
					this.$store.state.header.right_url = "/p/myforum";
				} else {
					this.$store.state.header.right_title = "创建圈子";
					this.$store.state.header.right_url = "/p/buildcircle";
				}
				forumsList({
					type: this.types[index],
					ticket: this.$store.state.ticket
				}).then(res => {
					this.forum_list = res.data;
				})
			},
			forumClick(id) {
				this.$router.push('/p/forum/post-detail/' + id)
			},
			urlHtmlReplace(str) {
				str = str.replace(/\n/g, '<br/>'); // 替换换行
				var reg = /(http:\/\/|https:\/\/)((\w|=|\?|\.|\/|&|-)+)/g;
				return str.replace(reg, '<a href="$1$2">$1$2</a>');
			},
			postClick() {
				this.post = true;
			},
			postClickColse() {
				this.post = false;
			},
			circleClick(id) {
				this.$router.push('/p/circle/detail/' + id);
			},
			//帖子点赞
			isPraise(forum) {
				forum.is_praise = 1;
				forum.praise++;
				likeCommunity({
					ticket: this.$store.state.ticket,
					community_id: forum.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//取消帖子点赞
			notPraise(forum) {
				forum.is_praise = 0;
				forum.praise--;
				unlikeCommunity({
					ticket: this.$store.state.ticket,
					community_id: forum.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//			clickReport(key) {
			//				// 举报的帖子,举报内容
			//				this.current_post.is_report = 1;
			//				addReport({
			//					ticket: this.$store.state.ticket,
			//					type: 1,
			//					community_id: this.current_post.id,
			//					reason: key
			//				}).then(res => {
			//					if(res.retcode == "2000") {
			//						this.$vux.toast.text(res.msg);
			//					} else {
			//						this.$vux.toast.text('');
			//					}
			//				})
			//
			//			},
			//收藏帖子
			isFavorite(forum) {
				forum.is_favorite = 1;
				forum.favorite++;
				favoritePost({
					ticket: this.$store.state.ticket,
					community_id: forum.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//取消收藏帖子
			notFavorite(forum) {
				forum.is_favorite = 0;
				forum.favorite--;
				delFavoritePost({
					ticket: this.$store.state.ticket,
					community_id: forum.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			joinCircle(circle) {
				circle.is_circle == 1;
				location.replace(location.href);
				circleJoin({
					ticket: this.$store.state.ticket,
					circle_id: circle.id
				}).then(res => {
					if(res.retcode == "2000") {
						circleList({
							ticket: this.$store.state.ticket
						}).then(res => {
							this.circle_list = res.data;
						});
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})

			},
			delPost(index) {
				var _this = this;
				this.$vux.confirm.show({
					title: '您是否确认删除该帖子?',
					onCancel() {},
					onConfirm() {
						delCommunity({
							ticket: _this.$store.state.ticket,
							community_id: _this.forum_list[index].id
						}).then(res => {
							if(res.retcode == "2000") {
								_this.$vux.toast.text(res.msg);
								_this.forum_list.splice(index, 1);
							} else {
								_this.$vux.toast.text('');
							}
						})
					}
				})
			},

			//举报块
			jubaoClick(key) {
				this.show = true
				this.current_post.is_report = 1;
				addReport({
					ticket: this.$store.state.ticket,
					type: 1,
					community_id: this.current_post.id,
					reason: key
				}).then(res => {
					this.show = false
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			cancelRerpot() {
				this.show = false;
			},
			showPopupPickerFun(post) {
				this.current_post = post;
				this.show = true;
			},
			//取消举报
			cancleReport1(forum) {
				forum.is_report = 0;
				cancleReport({
					ticket: this.$store.state.ticket,
					type: 1,
					community_id: forum.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.show = false;
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			btnClick() {
				var audios1 = document.querySelector(".audios-btn");
				if(audios1.paused) {
					audios1.play();
				} else {
					audios1.pause();
				}
			}
		},
		filter: {
			tell(value) {
				return value.substr(0, 3) + "****" + value.substr(7)
			}

		}

	}
</script>

