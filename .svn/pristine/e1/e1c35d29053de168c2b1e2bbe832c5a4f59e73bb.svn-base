<script>
	Vue.filter("tell", function(value, users) {
		var pattern = /^1[34578]\d{9}$/;
		if(pattern.test(value)) {
			if(value == users) {
				return value;
			} else {
				return value.substr(0, 3) + "****" + value.substr(7)
			}
		} else {
			return value;
		}
	})
	import { PopupPicker, Actionsheet } from 'vux'
	import { postDetail, likeCommunity, unlikeCommunity, favoritePost, delFavoritePost, addFriend, delFriend, addReport, cancleReport, delCommunity, userInfo, replayPost, delComment } from '../../api/api'
	import wx from 'weixin-js-sdk';
	import Vue from 'vue'
	export default {
		components: {
			PopupPicker,
			Actionsheet
		},
		data() {
			return {
				forums: {
					content: ''
				},
				forums_bottom: [],
				post: false,
				current_post: {},
				showPopupPicker: false,
				show: false,
				jubaoDatas: ['传播谣言', '诈骗钱财', '存在侵权行为', '不适当的内容'],
				users: {},
				replay_text: '',
				post_data: {}
			}
		},
		mounted() {
			this.$store.state.header.title = '帖子详情';
			this.$store.state.header.right_title = ""
			postDetail({
				community_id: this.$route.params.post_id,
				ticket: this.$store.state.ticket
			}).then(res => {
				this.forums = res.data.top
				this.forums_bottom = res.data.bottom

				// 默认数据
				this.setPostData(0);

				//配置微信
				this.$wechat.ready(() => {
					var title = this.forums.title + ' - 养殖专家在线互动交流';
					var link = window.location.href;
					var imgUrl = 'https://img.jianong.com/forum.jpg';
					this.$wechat.onMenuShareTimeline({
						title: title,
						link: link,
						imgUrl: imgUrl
					});
					this.$wechat.onMenuShareAppMessage({
						title: title,
						desc: this.forums.content,
						link: link,
						imgUrl: imgUrl
					});
					this.$wechat.onMenuShareQQ({
						title: title,
						link: link,
						imgUrl: imgUrl
					});
					this.$wechat.onMenuShareWeibo({
						title: title,
						link: link,
						imgUrl: imgUrl
					});
				});
			});
			userInfo({
				ticket: this.$store.state.ticket
			}).then(rs => {
				this.users = rs.data.mobile;
			})

		},
		methods: {
			//帖子列表里面删除评论
			moreClick(id) {
				var _this = this;
				this.$vux.confirm.show({
					title: '您是否确认删除该评论?',
					onCancel() {},
					onConfirm() {
						delComment({
							ticket: _this.$store.state.ticket,
							community_id: _this.forums.id,
							comment_id: id
						}).then(res => {
							if(res.retcode == "2000") {
								_this.$vux.toast.text(res.msg);
								postDetail({
									community_id: _this.$route.params.post_id,
									ticket: _this.$store.state.ticket
								}).then(res => {
									_this.forums = res.data.top
									_this.forums_bottom = res.data.bottom
								});
							} else {
								_this.$vux.toast.text('');
							}
						})
					}
				})
			},
			moreClick1(id) {
				this.show = true;
				this.current_post.is_report = 1
//				addReport({
//					ticket: this.$store.state.ticket,
//					type: 2,
//					community_id: id,
//					reason:this.jubaoData	
//				}).then(res => {
//					this.show = false
//					if(res.retcode == "2000") {
//						this.$vux.toast.text(res.msg);
//						delComment({
//							ticket: this.$store.state.ticket,
//							community_id: this.forums.id,
//							comment_id: id
//						}).then(res => {
//							if(res.retcode == "2000") {
//								this.$vux.toast.text(res.msg);
//								postDetail({
//									community_id: this.$route.params.post_id,
//									ticket: this.$store.state.ticket
//								}).then(res => {
//									this.forums = res.data.top
//									this.forums_bottom = res.data.bottom
//								});
//							} else {
//								_this.$vux.toast.text('');
//							}
//						})
//					} else if(res.retcode == "2002") {
//						this.$vux.toast.text('已举报!');
//					} else {
//						this.$vux.toast.text('');
//					}
//				})

			},
			//二级评论时点击的是这个帖子通过控制这个帖子来控制后期发送的是一级还是二级
			setPostData(id) {
				this.post_data = {
					ticket: this.$store.state.ticket,
					community_id: this.forums.id,
					sign: 'text',
					to_commit_id: id
				}
				if(id == 0) delete this.post_data.to_commit_id;
			},
			sendClick() {
				this.post_data.content = this.replay_text;
				replayPost(this.post_data).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text("发帖成功!");
						this.replay_text = ""
						postDetail({
							community_id: this.$route.params.post_id,
							ticket: this.$store.state.ticket
						}).then(res => {
							this.forums = res.data.top
							this.forums_bottom = res.data.bottom
						});
					} else if(this.replay_text == '') {
						this.$vux.toast.text('发送内容不能为空!');
					} else {
						this.$vux.toast.text('回帖失败!');
					}
				})
			},
			urlHtmlReplace(str) {
				str = str.replace(/\n/g, '<br/>'); // 替换换行
				var reg = /(http:\/\/|https:\/\/)((\w|=|\?|\.|\/|&|-)+)/g;
				return str.replace(reg, '<a href="$1$2">$1$2</a>');
			},
			btnClick() {
				var audios1 = document.querySelector(".audios-btn");
				if(audios1.paused) {
					audios1.play();
					wx.ready(function() {
						audios1.src = this.forums.content;
						audios1.play();
					})
				} else {
					audios1.pause();
				}
			},
			//点赞
			isPraise(forums) {
				forums.is_praise = 1;
				forums.praise++;
				likeCommunity({
					ticket: this.$store.state.ticket,
					community_id: forums.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//取消点赞
			notPraise(forums) {
				forums.is_praise = 0;
				forums.praise--;
				unlikeCommunity({
					ticket: this.$store.state.ticket,
					community_id: forums.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//收藏
			isFavorite(forums) {
				forums.is_favorite = 1;
				favoritePost({
					ticket: this.$store.state.ticket,
					community_id: forums.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//取消收藏
			notFavorite(forums) {
				forums.is_favorite = 0;
				delFavoritePost({
					ticket: this.$store.state.ticket,
					community_id: forums.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//添加关注
			addFriend1(forums) {
				this.forums.is_friend = 1;
				addFriend({
					ticket: this.$store.state.ticket,
					friend_id: forums.user_id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//取消关注
			delFriend1(forums) {
				this.forums.is_friend = 0;
				delFriend({
					ticket: this.$store.state.ticket,
					friend_id: forums.user_id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})

			},
			onHidePopup() {
				this.showPopupPicker = false;
			},
			showPopupPickerFun(post) {
				this.current_post = post;
				this.show = true;
			},
			//取消举报
			cancleReport1(forum) {
				this.show = false;
				forum.is_report = 0;
				cancleReport({
					ticket: this.$store.state.ticket,
					type: 1,
					community_id: forum.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			delPost(forums) {
				var _this = this;
				this.$vux.confirm.show({
					title: '您是否确认删除该帖子?',
					onCancel() {},
					onConfirm() {
						delCommunity({
							ticket: _this.$store.state.ticket,
							community_id: forums.id
						}).then(res => {
							if(res.retcode == "2000") {
								_this.$vux.toast.text(res.msg);
								_this.$route.push('/p/forum-list/4')
							} else {
								_this.$vux.toast.text('');
							}
						})

					}
				})
			},
			//举报块
			jubaoClick(key) {
				this.show = true
				this.current_post.is_report = 1;
				addReport({
					ticket: this.$store.state.ticket,
					type: 1,
					community_id: this.current_post.id,
					reason: key
				}).then(res => {
					this.show = false
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else if(res.retcode == "2002") {
						this.$vux.toast.text('已举报!');
						console.log(this.current_post)
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			cancelRerpot() {
				this.show = false
			},
			showPopupPickerFun(post) {
				this.current_post = post;
//				console.log(post)
				this.show = true;
			},
			//取消举报
			cancleReport1(forum) {
				forum.is_report = 0;
				cancleReport({
					ticket: this.$store.state.ticket,
					type: 1,
					community_id: forum.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.show = false;
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('canhus');
					}
				})
			},
		},
		filters: {
			urlHtmlReplace(str) {
				str = str.replace(/\n/g, '<br/>'); // 替换换行
				var reg = /(http:\/\/|https:\/\/)((\w|=|\?|\.|\/|&|-)+)/g;
				return str.replace(reg, '<a href="$1$2">$1$2</a>');
			}
		}
	}
</script>

