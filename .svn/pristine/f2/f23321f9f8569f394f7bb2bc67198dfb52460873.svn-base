<script>
	Vue.filter("tell", function(value, users) {
		var pattern = /^1[34578]\d{9}$/;
		if(pattern.test(value)) {
			if(value == users) {
				return value;
			} else {
				return value.substr(0, 3) + "****" + value.substr(7)
			}
		} else {
			return value;
		}
	})
	import { circleDetail, forumsList, favoritePost, delFavoritePost, unlikeCommunity, likeCommunity, addReport, cancleReport, circleJoin, delCommunity, userInfo } from '../../api/api'
	import { Scroller, Popup, PopupPicker, Actionsheet } from 'vux'
	import MugenScroll from 'vue-mugen-scroll'
	import Vue from 'vue'
	export default {
		components: {
			Scroller,
			Popup,
			MugenScroll,
			PopupPicker,
			Actionsheet
		},
		data() {
			return {
				data_circle: '',
				data_top: [],
				forum_list: [],
				post: false,
				loading: false,
				showPopupPicker: false,
				current_post: {},
				page: 0,
				loading: false,
				show: false,
				users: {}

			}
		},
		mounted() {
			circleDetail({
				ticket: this.$store.state.ticket,
				circle_id: this.$route.params.circle_id,
				page: 1
			}).then(res => {
				this.data_circle = res.data.circle;
				this.forum_list = res.data.community;
				this.data_top = res.data.top;
				this.$store.state.header.title = this.data_circle.name;
			})
			this.$store.state.header.right_title = "";
			userInfo({
				ticket: this.$store.state.ticket
			}).then(rs => {
				this.users = rs.data.mobile;
			})
			this.$wechat.ready(() => {
				var title = '蛋鸡管家 - 全球蛋鸡产业信息化平台';
				var link = window.location.href;
				var imgUrl = 'https://api.danjiguanjia.com/public/icon120.png';
				this.$wechat.onMenuShareTimeline({
					title: title,
					link: link,
					imgUrl: imgUrl
				});
				this.$wechat.onMenuShareAppMessage({
					title: title,
					desc: '关注蛋鸡管家,随时掌握最新行情信息!',
					link: link,
					imgUrl: imgUrl
				});
				this.$wechat.onMenuShareQQ({
					title: title,
					link: link,
					imgUrl: imgUrl
				});
				this.$wechat.onMenuShareWeibo({
					title: title,
					link: link,
					imgUrl: imgUrl
				});
			});
			
		},
		methods: {
			forumClick(id) {
				this.$router.push('/p/forum/post-detail/' + id);
			},
			onHidePopup() {
				this.showPopupPicker = false;
			},
			showPopupPickerFun(post) {
				this.current_post = post;
				this.show = true;
			},
			urlHtmlReplace(str) {
				str = str.replace(/\n/g, '<br/>'); // 替换换行
				var reg = /(http:\/\/|https:\/\/)((\w|=|\?|\.|\/|&|-)+)/g;
				return str.replace(reg, '<a href="$1$2">$1$2</a>');
			},
			forumClick(id) {
				this.$router.push('/p/forum/post-detail/' + id)
			},
			//无限加载调用函数
			fetchData() {
				this.page++;
				circleDetail({
					ticket: this.$store.state.ticket,
					circle_id: this.$route.params.circle_id,
					page: this.page
				}).then(res => {
					for(var i = 0; i < res.data.community.length; i++) {
						this.forum_list.push(res.data.community[i]);
					}
				})
			},
			postClick() {
				this.post = true;
			},
			postClickColse() {
				this.post = false;
			},
			onShow() {
				console.log('on show')
			},
			onHide(type) {
				console.log('on hide', type)
			},
			joinCircle(circle) {
				circle.is_circle == 1;
				circleJoin({
					ticket: this.$store.state.ticket,
					circle_id: circle.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
				circleDetail({
					ticket: this.$store.state.ticket,
					circle_id: this.$route.params.circle_id,
					page: 1
				}).then(res => {
					this.data_circle = res.data.circle;
					this.forum_list = res.data.community;
					this.data_top = res.data.top;
					this.$store.state.header.title = this.data_circle.name;
				})

			},
			showPopupPickerFun(post) {
				this.current_post = post;
				this.show = true;
			},
			delClick(id) {
				this.$router.push('/p/delcircle/' + id)
			}
		}
	}
</script>

