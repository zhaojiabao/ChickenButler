						<li>{{info.nickname}}</li>
						<li>{{info.create_time}}</li>
					</ul>
					<p v-if="info.sign_comment == 'text'" v-html="urlHtmlReplace(info.content)"></p>
					<p v-else>
						<button class="btnbox" @click="btnClick"> </button>
						<audio :src="info.content"></audio>
					</p>
				</div>
				<hr />
			</div>
		</div>
