			<ul>
				<li disabled>举报原因</li>
				<li v-for="(jubaoData,index) in jubaoDatas" @click="jubaoClick(jubaoData)">{{jubaoData}}</li>
				<li @click="cancelRerpot">取消</li>
			</ul>
		</div>
	</div>
</template>

<script>
	import { PopupPicker, Actionsheet } from 'vux'
	import { postDetail, likeCommunity, unlikeCommunity, favoritePost, delFavoritePost, addFriend, delFriend, addReport, cancleReport, delCommunity } from '../../api/api'
	import wx from 'weixin-js-sdk';
	export default {
		components: {
			PopupPicker,
			Actionsheet
		},
		data() {
			return {
				forums: {
					content: ''
				},
				forums_bottom: [],
				post: false,
				current_post: {},
				showPopupPicker: false,
				show: false,
				jubaoDatas:['传播谣言','诈骗钱财','存在侵权行为','不适当的内容']
			}
		},
		mounted() {
			this.$store.state.header.title = '帖子详情';
			this.$store.state.header.right_title = ""
			postDetail({
				community_id: this.$route.params.post_id,
				ticket: this.$store.state.ticket
			}).then(res => {
				this.forums = res.data.top
				this.forums_bottom = res.data.bottom
				//配置微信
				//				this.$wechat.ready(() => {
				//					var title = this.forums.title + ' - 养殖专家在线互动交流'
				//					var imgUrl = 'https://img.jianong.com/forum.jpg';
				//					this.$wechat.onMenuShareTimeline({
				//						title: title,
				//						link: window.location.href,
				//						imgUrl: imgUrl
				//					});
				//				});
				this.$wechat.ready(() => {
					var title = this.forums.title;
					var link = window.location.href;
					var imgUrl = this.forums.portrait;
					this.$wechat.onMenuShareTimeline({
						title: title,
						link: link,
						imgUrl: imgUrl
					});
					this.$wechat.onMenuShareAppMessage({
						title: title,
						desc: this.forums.content,
						link: link,
						imgUrl: imgUrl
					});
					this.$wechat.onMenuShareQQ({
						title: title,
						link: link,
						imgUrl: imgUrl
					});
					this.$wechat.onMenuShareWeibo({
						title: title,
						link: link,
						imgUrl: imgUrl
					});
				});
			});
		},
		methods: {
			urlHtmlReplace(str) {
				str = str.replace(/\n/g, '<br/>'); // 替换换行
				var reg = /(http:\/\/|https:\/\/)((\w|=|\?|\.|\/|&|-)+)/g;
				return str.replace(reg, '<a href="$1$2">$1$2</a>');
			},
			btnClick() {
				var audios = document.querySelector(".audios-btn");
				audios.play();
			},
			//点赞
			isPraise(forums) {
				forums.is_praise = 1;
				forums.praise++;
				likeCommunity({
					ticket: this.$store.state.ticket,
					community_id: forums.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//取消点赞
			notPraise(forums) {
				forums.is_praise = 0;
				forums.praise--;
				unlikeCommunity({
					ticket: this.$store.state.ticket,
					community_id: forums.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//收藏
			isFavorite(forums) {
				forums.is_favorite = 1;
				favoritePost({
					ticket: this.$store.state.ticket,
					community_id: forums.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//取消收藏
			notFavorite(forums) {
				forums.is_favorite = 0;
				delFavoritePost({
					ticket: this.$store.state.ticket,
					community_id: forums.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//添加关注
			addFriend1(forums) {
				this.forums.is_friend = 1;
				addFriend({
					ticket: this.$store.state.ticket,
					friend_id: forums.user_id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			//取消关注
			delFriend1(forums) {
				this.forums.is_friend = 0;
				delFriend({
					ticket: this.$store.state.ticket,
					friend_id: forums.user_id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})

			},
			onHidePopup() {
				this.showPopupPicker = false;
			},
			showPopupPickerFun(post) {
				this.current_post = post;
				this.show = true;
			},
			//取消举报
			cancleReport1(forum) {
				this.show = false;
				forum.is_report = 0;
				cancleReport({
					ticket: this.$store.state.ticket,
					type: 2,
					community_id: forum.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			clickReport(key) {
				// 举报的帖子,举报内容
				this.current_post.is_report = 1;
				addReport({
					ticket: this.$store.state.ticket,
					type: 2,
					community_id: this.current_post.id,
					reason: key
				}).then(res => {
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})

			},
			delPost(forums) {
				var _this = this;
				this.$vux.confirm.show({
					title: '您是否确认删除该帖子?',
					onCancel() {},
					onConfirm() {
						delCommunity({
							ticket: _this.$store.state.ticket,
							community_id: forums.id
						}).then(res => {
							if(res.retcode == "2000") {
								_this.$vux.toast.text(res.msg);
								_this.$route.push('/p/forum-list/4')
							} else {
								_this.$vux.toast.text('');
							}
						})

					}
				})
			},
			//举报块
			jubaoClick(key){
				this.show=true
				this.current_post.is_report = 1;
				addReport({
					ticket: this.$store.state.ticket,
					type: 1,
					community_id: this.current_post.id,
					reason: key
				}).then(res => {
					this.show=false
					if(res.retcode == "2000") {
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('');
					}
				})
			},
			cancelRerpot(){
				this.show=false
			},
			showPopupPickerFun(post) {
				this.current_post = post;
				this.show = true;
			},
			//取消举报
			cancleReport1(forum) {
				forum.is_report = 0;
				cancleReport({
					ticket: this.$store.state.ticket,
					type: 1,
					community_id: forum.id
				}).then(res => {
					if(res.retcode == "2000") {
						this.show = false;
						this.$vux.toast.text(res.msg);
					} else {
						this.$vux.toast.text('canhus');
					}
				})
			},
		},
		filters: {
			urlHtmlReplace(str) {
				str = str.replace(/\n/g, '<br/>'); // 替换换行
				var reg = /(http:\/\/|https:\/\/)((\w|=|\?|\.|\/|&|-)+)/g;
				return str.replace(reg, '<a href="$1$2">$1$2</a>');
			}
		}
	}
</script>

