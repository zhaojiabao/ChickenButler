<template>
	<div class="home">
		<div class="index">
			<div class="home-search">
				<search @result-click="resultClick" placeholder="搜索关键字或标签" @on-change="getResult" position="fixed" :results="results" v-model="value" :auto-scroll-to-top="true" @on-focus="onFocus" @on-cancel="onCancel" @on-submit="onSubmit" ref="search"></search>
			</div>
			<div class="home-function">
				<swiper :list="banner_list" v-model="banner_index" dots-position="center" :show-desc-mask="false" :auto="true" :loop="true" :interval="1500"></swiper>
				<grid :rows="4" class="grid">
					<grid-item :link="module.path" v-for="module in module_list">
						<img slot="icon" :src="module.img">
						<p>{{module.title}}</p>
					</grid-item>
				</grid>
			</div>

			<div class="news">
				<p class="zixun" id="zixun">新 闻 资 讯</p>
				<scroller lock-x scrollbar-y height="100vh" ref="scroller" use-pullup v-model="loading_state" @on-pullup-loading="onPullupLoading">
					<div class="box2">
						<div class="news-list" id="news-list" v-for="news in news_list">
							<div class="news-list-left">
								<div>
									<img :src="news.cms_pic" alt="" />
								</div>
								<p class="method">{{news.source}}</p>
								<p v-for="tag in news.tag_id">
									<span class="state">{{tag}}</span>
								</p>
							</div>
							<div class="news-list-right">
								<h3>{{news.cms_title}}</h3>
								<p>{{news.description}}</p>
								<p class="data"><span class="span-time">{{news.create_time}}</span><span class="span-number"><i><img src="https://api.danjiguanjia.com/public/image/eye.png" alt="" /></i>{{news.view}}</span></p>
								<p class="name">{{news.author}}</p>
							</div>
						</div>
					</div>
				</scroller>
			</div>
		</div>
		<PFooter></PFooter>
	</div>
</template>

<script>
	import { indexBanner, indexNews } from "../api/api"
	import { Swiper, Grid, GridItem, Search, Tabbar, TabbarItem, Group, Cell, Scroller, Divider, Spinner, LoadMore } from 'vux'
	import PFooter from '../views/common/footer'
	export default {
		components: {
			Swiper,
			Grid,
			GridItem,
			Search,
			Tabbar,
			TabbarItem,
			Group,
			Cell,
			Scroller,
			Divider,
			Spinner,
			LoadMore,
			PFooter
		},
		mounted() {
			//实现banner切换
			indexBanner().then(rs => {
				for(var i = 0; i < rs.data.length; i++) {
					if(i == rs.data.length - 1) return;
					this.banner_list.push({
						url: "/p/news/detail/" + rs.data[i].cms_id,
						img: rs.data[i].cms_pic
					});
				}
			});
			//实现新闻列表数据填充
			indexNews().then(res => {
				this.news_list = res.data;
			});
		},
		methods: {
			setFocus() {
				this.$refs.search.setFocus()
			},
			resultClick(item) {
				window.alert('you click the result item: ' + JSON.stringify(item))
			},
			getResult(val) {
				this.results = val ? getResult(this.value) : []
			},
			onSubmit() {
				this.$refs.search.setBlur()
				this.$vux.toast.show({
					type: 'text',
					position: 'top',
					text: 'on submit'
				})
			},
			onFocus() {
				console.log('on focus')
			},
			onCancel() {
				console.log('on cancel')
			},
			//数据读取到底部,然后下拉刷新页面继续填充数据
			onPullupLoading() {
				this.page++;
				indexNews({
					page: this.page
				}).then(res => {
					for(var i = 0; i < res.data.length; i++) {
						this.news_list.push(res.data[i]);
					}
					this.loading_state.pullupStatus = 'default'
				});
			}
		},
		data() {
			return {
				results: [],
				value: 'test',
				banner_list: [],
				banner_index: 0,
				news_list: [],
				index: true,
				forum: false,
				module_list: [{
						title: '热点资讯',
						img: 'https://img.jianong.com/redianzixun1@2x.png',
						path: 'p/news'
					}, {
						title: '云健康',
						img: 'https://img.jianong.com/yunjiance@2x.png'
					}, {
						title: '蛋鸡保险',
						img: 'https://img.jianong.com/danjibaoxian1@2x.png'
					}, {
						title: '管家商城',
						img: 'https://img.jianong.com/guanjiashangcheng@2x.png'
					},
					{
						title: '蛋价查询',
						img: 'https://img.jianong.com/danjiaditu1@2x.png'
					}, {
						title: '管家视界',
						img: 'https://img.jianong.com/guanjiashijie1@2x.png'
					}, {
						title: '生产效益',
						img: 'https://img.jianong.com/shengchanxiaoyi@2x.png'
					}, {
						title: '活动中心',
						img: 'https://img.jianong.com/huodongzhongxin1@2x.png'
					}
				],
				loading_state: { //scroller组件的加载状态
					pullupStatus: 'default'
				},
				page: 1
			}
		}
	}

	function getResult(val) {
		let rs = []
		for(let i = 0; i < 20; i++) {
			rs.push({
				title: `${val} result: ${i + 1} `,
				other: i
			})
		}
		return rs
	}
</script>

